@{
    ViewData["Title"] = "Home Page";
}
@model Fyo.Controllers.CodeViewModel;

<link rel="stylesheet" href="/css/code.css" />

<div style="text-align: center; padding: 25px;">
    <img src="/images/fyo.svg", style="width: 100px;" />
</div>

<hr />

<div style="padding: 25px;">

    <input type="hidden" id="deviceid" value="@Model.Device.UniqueIdentifier.ToString()" />
    <input type="hidden" id="playerid" value="@Model.Code.Player" />
    <h1 style="text-align: center;">Welcome Player @Model.Code.Player</h1>

    <h3 style="text-align: center;">Connect your phone to the wireless network:</h3>
    <div class="text-center">
        <img src="/images/wireless.png" style="width: 50px; display: inline; padding-right: 10px;" /><span>Garrett's WiFi Network @Model.Device.WirelessAccessPoint</span>
    </div>

    <br />

    <div id="connecting" data-ip="@Model.Device.IPAddress">

    </div>
</div>

<script type="text/javascript" src="/js/fetch.js"></script>
<script type="text/javascript" src="/js/connect.js"></script>